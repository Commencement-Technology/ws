{
  "name": "ws",
  "version": "1.0.0",
  "author": "Ed Halliwell",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "engines": {
    "node": ">=18.12.0",
    "npm": ">=8.6.0"
  },
  "scripts": {
    "build": "yarn workspaces foreach -W --include client --include server -ptv run build",
    "check-types": "yarn workspaces foreach -ptv run check-types",
    "format": "yarn prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "format:fix": "yarn prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "lint": "yarn workspaces foreach -v run lint",
    "dev": "yarn workspaces foreach --include client --include server -piv run dev",
    "start": "yarn workspaces foreach --include client --include server -piv run start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ed-halliwell/ws.git"
  },
  "packageManager": "yarn@4.0.2"
}
